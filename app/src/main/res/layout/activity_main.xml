<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#9ccc65">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/container"
        tools:context=".MainActivity"
        tools:ignore="MergeRootFrame"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/scrollView1"
        android:background="#9ccc65">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/startupImage"
            android:layout_gravity="center"
            android:src="@drawable/googleplay" />

    </FrameLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

            <Button
                android:id="@+id/currency"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_currency" />

            <Button
                android:id="@+id/time"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_below="@+id/currency"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/currency"
                android:layout_alignEnd="@+id/currency"
                android:background="@drawable/ic_timefinal" />
            <Button
                android:id="@+id/speed"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_below="@+id/time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/time"
                android:layout_alignEnd="@+id/time"
                android:background="@drawable/ic_speedfinal" />
            <Button
                android:id="@+id/weightmass"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/speed"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/speed"
                android:layout_alignEnd="@+id/speed"
                android:background="@drawable/ic_weightmassfinal" />

            <Button
                android:id="@+id/distance"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="bottom|center"
                android:textAllCaps="false"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/weightmass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/weightmass"
                android:layout_alignEnd="@+id/weightmass"
                android:background="@drawable/ic_distancefinal" />

            <Button
                android:id="@+id/percent_frag"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/distance"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:background="@drawable/ic_percentagefinal"
                android:textColor="#fffafffb" />

            <Button
                android:id="@+id/datasize"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/percent_frag"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:textColor="#fffafffb"
                android:background="@drawable/ic_datasizefinal" />

            <Button
                android:id="@+id/temperature"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/datasize"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:background="@drawable/ic_temperaturefinal" />

            <Button
                android:id="@+id/area"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/temperature"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:textColor="#fffafffb"
                android:background="@drawable/ic_areafinal" />

            <Button
                android:id="@+id/hexBinaryDec"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/area"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:background="@drawable/ic_numbersystemsfinal"
                android:textColor="#fffafffb" />

            <Button
                android:id="@+id/angle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="ButtonOnClick"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/hexBinaryDec"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:textColor="#fffafffb"
                android:background="@drawable/ic_anglefinal" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

